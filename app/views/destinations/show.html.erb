
    <h1>Destination: <%= @destination.location %></h1>
    <p>Created by: <%= @destination.user.username %></p>

    <h2>Your <%= @destination.location %> expriences: </h2>
    <ul>
    <% @destination.experiences.each do |experience| %>
        <li><%= experience.activity %></li>
    <% end %>
    </ul>

    <h3>What other users are doing when they go to <%=@destination.location%>:</h3>
   <% if @destination.experiences.count - @destination.experiences.count == 0  %>
    <p> No other users have experienced <%= @destination.location %> before!</p>
    <% else %>
    <ul>
    <% User.all.each do |user| %>
       <% user.destinations.each do |destination| %>
            <% destination.experiences.each do |experience| %>
                <% if user != current_user %>
                    <li> <%= experience.activity %> -- posted by: <%= user.username %> </li>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
    </ul>
    <% end %>
    <%= link_to "Add your experience at this location", new_experience_path %><br>
    <%= link_to "Back to your home page", user_path(@destination.user) %><br>
    <%= link_to "Edit Destination", edit_destination_path(@destination) %><br>